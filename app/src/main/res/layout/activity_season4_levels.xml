<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Season4Levels">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/underlinestyle"
        android:id="@+id/season4ActivityActionBar">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/circled_left"
            android:id="@+id/goBackBtnFromLevelToSeason"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/chewy"
            android:text="Crime"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/season4ActivityActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layoutSeason4LevelRow1"

                android:layout_margin="25dp">
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@drawable/popupborder"
                    android:padding="10dp"
                    android:layout_margin="10dp"

                    android:id="@+id/layoutSeason4LevelW">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Level W"
                        android:gravity="center"

                        android:id="@+id/levelWLabel"
                        android:textSize="20sp"
                        android:fontFamily="@font/chewy"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/levelWLabel">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/levelWStar1"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/levelWStar2"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="2dp"
                            android:id="@+id/levelWStar3"
                            />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutSeason4LevelX"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/layoutSeason4LevelW"
                    android:background="@drawable/popupborder"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/chewy"
                        android:gravity="center"
                        android:id="@+id/levelXLabel"
                        android:text="Level X"
                        android:textSize="20sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/levelXLabel">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/levelXStar1"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/levelXStar2"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="2dp"
                            android:id="@+id/levelXStar3"
                            />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layoutSeason4LevelRow2"
                android:layout_below="@id/layoutSeason4LevelRow1"
                android:layout_margin="25dp">
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:id="@+id/layoutSeason4LevelY"
                    android:background="@drawable/popupborder"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:layout_alignParentLeft="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/levelYLabel"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/chewy"
                        android:gravity="center"
                        android:text="Level Y"
                        android:textSize="20sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/levelYLabel">

                        <ImageView
                            android:id="@+id/levelYStar1"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp" />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/levelYStar2"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="2dp"
                            android:id="@+id/levelYStar3"
                            />
                    </RelativeLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/layoutSeason4LevelY"
                    android:background="@drawable/popupborder"
                    android:padding="10dp"
                    android:id="@+id/layoutSeason4LevelZ">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/levelZLabel"
                        android:layout_marginTop="10dp"
                        android:text="Level Z"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:fontFamily="@font/chewy"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/levelZLabel">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/levelZStar1"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/levelZStar2"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="2dp"
                            android:id="@+id/levelZStar3"
                            />
                    </RelativeLayout>
                </RelativeLayout>



            </RelativeLayout>



        </RelativeLayout>

    </ScrollView>

</RelativeLayout>