<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LevelWFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/optionD"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:text="eric"
        android:textSize="14sp" />

    <Button
        android:id="@+id/optionA"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/murderer"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="237dp"
        android:layout_marginRight="237dp"
        android:text="the father"
        android:textSize="14sp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="233dp"
        android:layout_marginRight="233dp"
        android:text="uncle george"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/questionTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/chewy"
        android:gravity="center"
        android:text="@string/question"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/question"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionTxt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/chewy"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="On a Sunday morning, the oldest girl in a family was murdered. The father was reading the paper, the mother was in the kitchen cooking breakfast, and the girlâ€™s younger brother Eric was playing video games. Uncle George was visiting and was out getting the mail. Who murdered the girl?"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/murderer"
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:layout_below="@+id/question"
        android:layout_marginTop="13dp"
        android:src="@drawable/killer" />

    <ImageView
        android:id="@+id/inform"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:layout_below="@+id/submit"
        android:layout_marginTop="3dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/optionB"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="218dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="the mother"
        android:textSize="14sp" />

</RelativeLayout>