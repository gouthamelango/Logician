<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LevelMFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="319dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:text="one plus twelve"
        android:textSize="14sp" />

    <Button
        android:id="@+id/optionA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numbers"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="271dp"
        android:layout_marginRight="271dp"
        android:text="four plus nine"
        android:textSize="14sp" />

    <Button
        android:id="@+id/optionC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="317dp"
        android:layout_marginEnd="271dp"
        android:layout_marginRight="271dp"
        android:text="five plus eight"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/questionTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/chewy"
        android:gravity="center"
        android:text="@string/question"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/question"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionTxt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:fontFamily="@font/chewy"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Arithmetic Anagrams: Which combination of the same letters used in 'two plus eleven' also results in the correct answer of 13? "
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/numbers"
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:layout_below="@+id/question"
        android:layout_marginTop="31dp"
        android:src="@drawable/numbersjumble" />

    <ImageView
        android:id="@+id/inform"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:layout_below="@+id/optionC"
        android:layout_marginTop="3dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/optionB"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="233dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="three plus ten"
        android:textSize="14sp" />


</RelativeLayout>