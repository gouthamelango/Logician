<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LevelYFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/optionD"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:text="thomas"
        android:textSize="14sp" />

    <Button
        android:id="@+id/optionA"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numbers"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="247dp"
        android:layout_marginRight="247dp"
        android:text="Mary"
        android:textSize="14sp" />

    <Button
        android:id="@+id/optionC"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="289dp"
        android:layout_marginEnd="245dp"
        android:layout_marginRight="245dp"
        android:text="victor"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/questionTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/chewy"
        android:gravity="center"
        android:text="@string/question"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/question"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionTxt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:fontFamily="@font/chewy"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="A famous chemist was murdered in his own lab. There was no evidence except for a piece of paper with the names of chemical substances on it. On the day he was murdered, the chemist had only 4 visitors: his wife Mary, his nephew Nicolas, his assistant Thomas, and his friend victor. Who is the murderer?"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/numbers"
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:layout_below="@+id/question"
        android:layout_marginTop="9dp"
        android:src="@drawable/chemistlabcrime" />

    <ImageView
        android:id="@+id/inform"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:layout_below="@+id/optionC"
        android:layout_marginTop="1dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/submit"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="211dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:text="Nicholas"
        android:textSize="14sp" />


</RelativeLayout>