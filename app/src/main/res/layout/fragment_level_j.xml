<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LevelJFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/optionD"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="319dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="four blocks"
        android:textSize="14sp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/walk"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="278dp"
        android:layout_marginRight="278dp"
        android:text="one block"
        android:textSize="14sp" />

    <Button
        android:id="@+id/optionC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="317dp"
        android:layout_marginEnd="282dp"
        android:layout_marginRight="282dp"
        android:text="three blocks"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/questionTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/chewy"
        android:gravity="center"
        android:text="@string/question"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/question"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionTxt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:fontFamily="@font/chewy"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Rajini travels four blocks north, then two blocks east, then three blocks south and finally two blocks west. How many blocks is Rajini from his starting place? "
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/walk"
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:layout_below="@+id/question"
        android:layout_marginTop="31dp"
        android:src="@drawable/walkingdirections" />

    <ImageView
        android:id="@+id/inform"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:layout_below="@+id/optionC"
        android:layout_marginTop="3dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/optionB"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="two blocks"
        android:textSize="14sp" />


</RelativeLayout>