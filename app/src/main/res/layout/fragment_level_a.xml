<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LevelAFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/questionTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/chewy"
        android:gravity="center"
        android:text="Question"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionTxt"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/chewy"
        android:gravity="center"
        android:text="Which month has 28 days? "
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/levelAAns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/galada"
        android:gravity="center"
        android:text="Calendar"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/calenderImg"
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:layout_below="@+id/levelAAns"
        android:src="@drawable/calender" />
    <ImageView
        android:id="@+id/inform"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/calenderImg"
        android:visibility="visible" />


</RelativeLayout>