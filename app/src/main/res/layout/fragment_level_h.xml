<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LevelHFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/optionD"
        android:layout_width="158dp"
        android:layout_height="72dp"
        android:layout_below="@+id/question"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="319dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:text="Eric and Cliff are right but Mary is incorrect"
        android:textSize="14sp" />

    <Button
        android:id="@+id/optionA"
        android:layout_width="159dp"
        android:layout_height="83dp"
        android:layout_below="@+id/clock"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="228dp"
        android:layout_marginRight="228dp"
        android:text="Mary and Eric are right but Cliff is incorrect"
        android:textSize="14sp" />

    <Button
        android:id="@+id/optionC"
        android:layout_width="157dp"
        android:layout_height="74dp"
        android:layout_below="@+id/question"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="319dp"
        android:layout_marginEnd="228dp"
        android:layout_marginRight="228dp"
        android:text="Mary, Eric and Cliff are right"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/questionTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/chewy"
        android:gravity="center"
        android:text="@string/question"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/question"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionTxt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:fontFamily="@font/chewy"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Mary says she is older than Eric. Cliff says he is older than Mary and Eric say he is older than Cliff. What\'s your interpretation?"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/clock"
        android:layout_width="274dp"
        android:layout_height="172dp"
        android:layout_below="@+id/question"
        android:layout_marginTop="31dp"
        android:src="@drawable/eric" />

    <ImageView
        android:id="@+id/inform"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:layout_below="@+id/optionC"
        android:layout_marginTop="3dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/submit"
        android:layout_width="158dp"
        android:layout_height="78dp"
        android:layout_below="@+id/question"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:text="Mary and Cliff are right but Eric is incorrect"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/eric"
        android:layout_width="116dp"
        android:layout_height="174dp"
        android:layout_below="@id/question"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="146dp"
        android:layout_marginRight="146dp"
        android:src="@drawable/cliff"/>

    <ImageView
        android:id="@+id/mary"
        android:layout_width="182dp"
        android:layout_height="163dp"
        android:layout_below="@id/question"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:src="@drawable/mary" />


</RelativeLayout>