<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".Season2Levels">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/underlinestyle"
        android:id="@+id/season2ActivityActionBar">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/circled_left"
            android:id="@+id/goBackBtnFromLevelToSeason"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/chewy"
            android:text="Season 2"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/season2ActivityActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layoutSeason2LevelRow1"

                android:layout_margin="25dp">
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@drawable/popupborder"
                    android:padding="10dp"
                    android:layout_margin="10dp"

                    android:id="@+id/layoutSeason2LevelG">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Level G"
                        android:gravity="center"

                        android:id="@+id/levelGLabel"
                        android:textSize="20sp"
                        android:fontFamily="@font/chewy"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/levelGLabel">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/levelGStar1"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/levelGStar2"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="2dp"
                            android:id="@+id/levelGStar3"
                            />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutSeason2LevelH"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/layoutSeason2LevelG"
                    android:background="@drawable/popupborder"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/chewy"
                        android:gravity="center"
                        android:id="@+id/levelHLabel"
                        android:text="Level H"
                        android:textSize="20sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/levelHLabel">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/levelHStar1"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/levelHStar2"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="2dp"
                            android:id="@+id/levelHStar3"
                            />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layoutSeason2LevelRow2"
                android:layout_below="@id/layoutSeason2LevelRow1"
                android:layout_margin="25dp">
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:id="@+id/layoutSeason2LevelI"
                    android:background="@drawable/popupborder"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:layout_alignParentLeft="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/levelILabel"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/chewy"
                        android:gravity="center"
                        android:text="Level I"
                        android:textSize="20sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/levelILabel">

                        <ImageView
                            android:id="@+id/levelIStar1"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp" />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/levelIStar2"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="2dp"
                            android:id="@+id/levelIStar3"
                            />
                    </RelativeLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/layoutSeason2LevelI"
                    android:background="@drawable/popupborder"
                    android:padding="10dp"
                    android:id="@+id/layoutSeason2LevelJ">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/levelJLabel"
                        android:layout_marginTop="10dp"
                        android:text="Level J"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:fontFamily="@font/chewy"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/levelJLabel">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/levelJStar1"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/levelJStar2"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="2dp"
                            android:id="@+id/levelJStar3"
                            />
                    </RelativeLayout>
                </RelativeLayout>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layoutSeason2LevelRow3"
                android:layout_below="@id/layoutSeason2LevelRow2"
                android:layout_margin="25dp">


                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@drawable/popupborder"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:id="@+id/layoutSeason2LevelK">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/levelKLabel"
                        android:layout_marginTop="10dp"
                        android:text="Level K"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:fontFamily="@font/chewy"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/levelKLabel">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/levelKStar1"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/levelKStar2"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="2dp"
                            android:id="@+id/levelKStar3"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/layoutSeason2LevelK"
                    android:background="@drawable/popupborder"
                    android:padding="10dp"
                    android:id="@+id/layoutSeason2LevelL"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/levelLLabel"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/chewy"
                        android:gravity="center"
                        android:text="Level L"
                        android:textSize="20sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/levelLLabel">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/levelLStar1"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/levelLStar2"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="2dp"
                            android:id="@+id/levelLStar3"
                            />
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layoutSeason2LevelRow4"
                android:layout_below="@id/layoutSeason2LevelRow3"
                android:layout_margin="25dp">


                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@drawable/popupborder"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:id="@+id/layoutSeason2LevelM">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/levelMLabel"
                        android:layout_marginTop="10dp"
                        android:text="Level M"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:fontFamily="@font/chewy"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/levelMLabel">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/levelMStar1"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/levelMStar2"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="2dp"
                            android:id="@+id/levelMStar3"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/layoutSeason2LevelM"
                    android:background="@drawable/popupborder"
                    android:padding="10dp"
                    android:id="@+id/layoutSeason2LevelN"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/levelNLabel"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/chewy"
                        android:gravity="center"
                        android:text="Level N"
                        android:textSize="20sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/levelNLabel">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/levelNStar1"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/levelNStar2"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="2dp"
                            android:id="@+id/levelNStar3"
                            />
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>





        </RelativeLayout>







    </ScrollView>






</RelativeLayout>