<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Season3Levels">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/underlinestyle"
        android:id="@+id/season3ActivityActionBar">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/circled_left"
            android:id="@+id/goBackBtnFromLevelToSeason"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/chewy"
            android:text="Words Play"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/season3ActivityActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layoutSeason3LevelRow1"

                android:layout_margin="25dp">
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@drawable/popupborder"
                    android:padding="10dp"
                    android:layout_margin="10dp"

                    android:id="@+id/layoutSeason3LevelQ">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Level Q"
                        android:gravity="center"

                        android:id="@+id/levelQLabel"
                        android:textSize="20sp"
                        android:fontFamily="@font/chewy"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/levelQLabel">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/levelQStar1"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/levelQStar2"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="2dp"
                            android:id="@+id/levelQStar3"
                            />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutSeason3LevelR"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/layoutSeason3LevelQ"
                    android:background="@drawable/popupborder"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/chewy"
                        android:gravity="center"
                        android:id="@+id/levelRLabel"
                        android:text="Level R"
                        android:textSize="20sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/levelRLabel">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/levelRStar1"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/levelRStar2"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="2dp"
                            android:id="@+id/levelRStar3"
                            />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layoutSeason3LevelRow2"
                android:layout_below="@id/layoutSeason3LevelRow1"
                android:layout_margin="25dp">
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:id="@+id/layoutSeason3LevelS"
                    android:background="@drawable/popupborder"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:layout_alignParentLeft="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/levelSLabel"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/chewy"
                        android:gravity="center"
                        android:text="Level S"
                        android:textSize="20sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/levelSLabel">

                        <ImageView
                            android:id="@+id/levelSStar1"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp" />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/levelSStar2"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="2dp"
                            android:id="@+id/levelSStar3"
                            />
                    </RelativeLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/layoutSeason3LevelS"
                    android:background="@drawable/popupborder"
                    android:padding="10dp"
                    android:id="@+id/layoutSeason3LevelT">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/levelTLabel"
                        android:layout_marginTop="10dp"
                        android:text="Level T"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:fontFamily="@font/chewy"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/levelTLabel">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/levelTStar1"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/levelTStar2"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="2dp"
                            android:id="@+id/levelTStar3"
                            />
                    </RelativeLayout>
                </RelativeLayout>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layoutSeason3LevelRow3"
                android:layout_below="@id/layoutSeason3LevelRow2"
                android:layout_margin="25dp">


                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@drawable/popupborder"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:id="@+id/layoutSeason3LevelU">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/levelULabel"
                        android:layout_marginTop="10dp"
                        android:text="Level U"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:fontFamily="@font/chewy"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/levelULabel">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/levelUStar1"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/levelUStar2"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="2dp"
                            android:id="@+id/levelUStar3"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/layoutSeason3LevelU"
                    android:background="@drawable/popupborder"
                    android:padding="10dp"
                    android:id="@+id/layoutSeason3LevelV"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/levelVLabel"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/chewy"
                        android:gravity="center"
                        android:text="Level V"
                        android:textSize="20sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/levelVLabel">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/levelVStar1"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/levelVStar2"
                            android:layout_margin="2dp"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="2dp"
                            android:id="@+id/levelVStar3"
                            />
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>