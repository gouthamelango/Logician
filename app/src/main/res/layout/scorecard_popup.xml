<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="600dp"
    android:layout_gravity="center"
    android:background="@drawable/popupborder"

    android:orientation="vertical"
    android:padding="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level Passed"
            android:textSize="32sp"
            android:id="@+id/scoreCardTitle"
            android:fontFamily="@font/chewy"
            android:layout_marginTop="50dp"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id = "@+id/starsLayout"
            android:layout_below="@+id/scoreCardTitle"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/starImg1"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="45dp"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/starImg2"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:id="@+id/starImg3"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/starsLayout"
            android:id="@+id/layoutNextButton">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:id="@+id/treasureImg"
                android:src="@drawable/treasure"
                android:layout_centerHorizontal="true"
                />



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layoutNextButton">
            <ImageView
                android:id="@+id/nextLevel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/nextbtn1" />

            <ImageView
                android:id="@+id/restart"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/nextLevel"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/replay" />

            <ImageView
                android:id="@+id/returnHome"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignLeft="@+id/restart"
                android:layout_marginLeft="111dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/nextLevel"
                android:src="@drawable/home" />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>